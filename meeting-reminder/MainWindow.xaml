<Window x:Class="MeetingReminder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeetingReminder"
        mc:Ignorable="d"
        Title="Events List" Height="450" Width="800" ResizeMode="CanResizeWithGrip"
        Topmost="True">
    <Grid Margin="10 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="22"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" x:Name="DateLabel"/>
        <ListView Grid.Row="1" x:Name="EventsList"/>
    </Grid>
</Window>
